PORT=5000
MONGODB_URI=mongodb://localhost:27017/ecommerce
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
NODE_ENV=development

# Cloudinary (for image/video uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email (SMTP)
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
# For testing: Use Ethereal (https://ethereal.email) or Mailtrap (https://mailtrap.io)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_16_char_app_password
EMAIL_FROM_NAME=E-Commerce Store

# Alternative: Ethereal (free test emails - create account at https://ethereal.email)
# SMTP_HOST=smtp.ethereal.email
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=generated_user@ethereal.email
# SMTP_PASS=generated_password
# USE_ETHEREAL=true

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173